# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google OAuth Callback URL
GOOGLE_CALLBACK_URL=https://your-backend-domain.onrender.com/api/users/auth/google/callback

# JWT Secret (change this to a secure random string in production)
JWT_SECRET=your_jwt_secret_here

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Backend URL (for OAuth callback)
BACKEND_URL=https://your-backend-domain.onrender.com

# MongoDB Connection - Update with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Use Mock Database (set to 'false' to use MongoDB)
USE_MOCK_DB=false

# Server Port
PORT=5000